<Controls:MetroWindow x:Class="GreenPrintClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"

        xmlns:local="clr-namespace:GreenPrintClient"
        mc:Ignorable="d"
        Title="GreenPrint" Height="500" Width="525" Loaded="MetroWindow_Loaded"
                      
        BorderThickness="0" 
        GlowBrush="Black"
        ResizeMode="CanResizeWithGrip"
        >
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button Content="settings" />
            <Button>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20"
                   Height="20"
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_user}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
                   VerticalAlignment="Center"
                   Text=""
                    Name="appbar_ClientID"/>
                </StackPanel>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <Grid HorizontalAlignment="Left" Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="165" />
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid  Margin="10,10,10,10" VerticalAlignment="Top" />

        <Label          Margin="5" Name="lblDocumentName"  Grid.Column="0" Grid.Row="0">Document Name</Label>
        <TextBox        Margin="5" Name="txtDocumentName"  Grid.Column="1" Grid.Row="0" Width="196" TextChanged="txtDocumentName_TextChanged"></TextBox>
        <RadioButton    Margin="5" Name="rbDeviceSign"  Grid.Column="0" Grid.Row="1">Sign via connected device</RadioButton>
        <RadioButton    Margin="5" Name="rbRemoteSign"  Grid.Column="0" Grid.Row="2">Sign via remote device</RadioButton>

        <CheckBox       Margin="25,5,5,5" Name="cbSignViaSMS"       
                        IsEnabled="{Binding ElementName=rbRemoteSign, Path=IsChecked}"
                        Grid.Column="0" 
                        Grid.Row="3" 
                        Checked="cbSignViaSMS_Checked" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center">Sign via SMS</CheckBox>
        <WrapPanel Grid.Column="1" Grid.Row="3">
            <ComboBox       Margin="5"        Name="cmbCountryPhonePrefix"      Width="50" HorizontalAlignment="Left" 
                            IsEnabled="{Binding ElementName=cbSignViaSMS, Path=IsChecked}"></ComboBox>
            <TextBox        Margin="5"        Name="txtSMSNumber"               Width="150" HorizontalAlignment="Center"
                            IsEnabled="{Binding ElementName=cbSignViaSMS, Path=IsChecked}"></TextBox>
        </WrapPanel>

        <CheckBox       Margin="25,5,5,5" Name="cbSignViaEmail"     
                        IsEnabled="{Binding ElementName=rbRemoteSign, Path=IsChecked}"
                        Grid.Column="0" 
                        Grid.Row="4">Sign via Email</CheckBox>
        <TextBox        Margin="5"        Name="txtEmailAddress"    Grid.Column="1" Grid.Row="4" Height="Auto"
                        IsEnabled="{Binding ElementName=cbSignViaEmail, Path=IsChecked}"
                        ></TextBox>

        <Label          Margin="5"        Name="lblCCListTitle"     Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2">
            Send copy of signed document to ...
        </Label>

        <WrapPanel Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2">
            <TextBox    Margin="5"      Name="txtAddCC" Width="320"></TextBox>
            <Button     Margin="5" Padding="5"  Name="btnAddCCAddress">Add ...</Button>
        </WrapPanel>

        <ListBox        Margin="5" Padding="5" Name="lstCCList"     
                        Grid.Column="0" 
                        Grid.Row="7" 
                        Grid.ColumnSpan="2"
                        Height="100"/>

        <Separator Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="8">

        </Separator >

        <TextBlock      Margin="5"  
                        Padding="5" 
                        Name="txtMessages" 
                        Grid.Row="9" 
                        Grid.ColumnSpan="2"
                        Height="50"
                        >

        </TextBlock>
        <Separator Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="10">

        </Separator>

        <WrapPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="11" HorizontalAlignment="Right" >
            <Button Margin="5" Padding="5" Name="btnCancel" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" Width="60">Cancel</Button>
            <Button Margin="5" Padding="5" Name="btnSubmit" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" Width="60">Submit</Button>
        </WrapPanel>

    </Grid>


</Controls:MetroWindow>
