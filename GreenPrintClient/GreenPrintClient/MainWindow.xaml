<Controls:MetroWindow x:Class="GreenPrintClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"

        xmlns:local="clr-namespace:GreenPrintClient"
        mc:Ignorable="d"
        Title="GreenPrint" Height="500" Width="525" Loaded="MetroWindow_Loaded"
                      
        BorderThickness="0" 
        GlowBrush="Black"
        ResizeMode="NoResize"
        >
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button Content="settings" />
            <Button>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20"
                   Height="20"
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_user}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
                   VerticalAlignment="Center"
                   Text=""
                    Name="appbar_ClientID"/>
                </StackPanel>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <Grid HorizontalAlignment="Left" Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid  Margin="10,10,10,10" VerticalAlignment="Top" />

        <Image  Margin="5,0,0,0"          
                Name="imgGreen"
                Grid.Column="2" Grid.Row="0"  Grid.RowSpan="12" Source="Resources/grass.jpg" Stretch="UniformToFill" RenderTransformOrigin="0.5,0.5"/>

        <TextBlock  Name="lblLogo" 
                Foreground="White"
                Grid.Column="1" Grid.RowSpan="10" 
                RenderTransformOrigin="0.5,0.5" FontWeight="ExtraLight" 
                Margin="110,17,-100,12" FontSize="44"
                    Opacity="0.6"
                    Grid.ColumnSpan="2" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
            GreenPrint

        </TextBlock>
        <TextBlock  Name="lblLogo2" 
                Foreground="White"
                    Opacity="0.6"
                Grid.Column="1" Grid.RowSpan="10" 
                RenderTransformOrigin="0.5,0.5" FontWeight="ExtraLight" 
                Margin="80,17,-200,12" FontSize="20" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
            Paperless Document Signing and Printing

        </TextBlock>


        <Label          Margin="5" Name="lblDocumentName"  Grid.Column="0" Grid.Row="0" FontSize="14" FontFamily="Segoe UI, Lucida Sans Unicode, Verdana">Document Name</Label>
        <TextBox        Margin="5" Name="txtDocumentName"  Grid.Column="1" Grid.Row="0" Width="196" TextChanged="txtDocumentName_TextChanged"></TextBox>
        <RadioButton    Margin="5" Name="rbDeviceSign"  Grid.Column="0" Grid.Row="1">Sign via connected device</RadioButton>
        <RadioButton    Margin="5" Name="rbRemoteSign"  Grid.Column="0" Grid.Row="2">Sign via remote device</RadioButton>

        <CheckBox       Margin="25,5,5,5" Name="cbSignViaSMS"       
                        IsEnabled="{Binding ElementName=rbRemoteSign, Path=IsChecked}"
                        Grid.Column="0" 
                        Grid.Row="3" 
                        Checked="cbSignViaSMS_Checked" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center">Sign via SMS
        </CheckBox>

        <WrapPanel Grid.Column="1" Grid.Row="3">
            <ComboBox       Margin="5"        
                            Name="cmbCountryPhonePrefix"      
                            Width="70" HorizontalAlignment="Left" 
                            IsEnabled="{Binding ElementName=cbSignViaSMS, Path=IsChecked}"
                            SelectionChanged="cmbCountryPhonePrefix_SelectionChanged"
                            >

            </ComboBox>

            <TextBox        Margin="5"        
                            Name="txtSMSNumber"               
                            Width="125" 
                            HorizontalAlignment="Center"
                            IsEnabled="{Binding ElementName=cbSignViaSMS, Path=IsChecked}"></TextBox>
        </WrapPanel>

        <CheckBox       Margin="25,5,5,5" 
                        Name="cbSignViaEmail"     
                        Grid.Column="0" 
                        Grid.Row="4"
                        IsEnabled="{Binding ElementName=rbRemoteSign, Path=IsChecked}"
                        >Sign via Email

        </CheckBox>

        <TextBox        Margin="5"        
                        Name="txtEmailAddress"    
                        Grid.Column="1" 
                        Grid.Row="4" 
                        Height="Auto"
                        IsEnabled="{Binding ElementName=cbSignViaEmail, Path=IsChecked}">
        </TextBox>

        <Label          Margin="5"        
                        Name="lblCCListTitle"     
                        Grid.Column="0" 
                        Grid.Row="5" 
                        Grid.ColumnSpan="2" FontFamily="Segoe UI, Lucida Sans Unicode, Verdana">
            Send copy of signed document to ...
        </Label>

        <WrapPanel Panel.ZIndex="1" Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2">
            <TextBox    Margin="5"      
                        Name="txtAddCC"
                        Width="320">
            </TextBox>
            <Button     Margin="5" Padding="5"  
                        Width="80"
                        Name="btnAddCCAddress" Click="btnAddCCAddress_Click"
                        >
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text.Length, ElementName=txtAddCC}"
                                     Value="0">
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                Add..
            </Button>

        </WrapPanel>

        <ListBox        Margin="5" Padding="5" 
                        Name="lstCCList"     
                        Grid.Column="0" 
                        Grid.Row="7" 
                        Grid.ColumnSpan="2"
                        Height="100" />

        <Separator Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="8">
        </Separator >

        <TextBlock      Margin="5"  
                        Padding="5" 
                        Name="txtMessages" 
                        Grid.Row="9" 
                        Grid.ColumnSpan="2"
                        Height="50">

        </TextBlock>

        <Separator Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="10">
        </Separator>

        <WrapPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="11" HorizontalAlignment="Right" >
            <Button Margin="5" Padding="5" 
                    Name="btnCancel" 
                    HorizontalContentAlignment="Center" 
                    VerticalContentAlignment="Center" 
                    HorizontalAlignment="Right" Width="80" Click="btnCancel_Click">
                Cancel
            </Button>
            <Button Margin="5" Padding="5"
                    Name="btnSubmit" 
                    HorizontalContentAlignment="Center" 
                    VerticalContentAlignment="Stretch" 
                    Width="80" Click="btnSubmit_Click">
                Submit
            </Button>


        </WrapPanel>
        <Controls:ProgressRing Name="prSubmitting"
                               IsActive="false" 
                               Height="10" Width="10"
                               Grid.Column="2" Grid.Row="10" Grid.RowSpan="2"/>
    </Grid>


</Controls:MetroWindow>
